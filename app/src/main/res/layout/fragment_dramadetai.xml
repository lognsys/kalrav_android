<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e5"
    android:orientation="vertical"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:background="@drawable/round_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dramaImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="left|center"
                    android:src="@drawable/gujjubhai_ghode_chadhiya" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDramaName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Gujjubhai ghode chadhiya"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDramaLength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h 28min "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:layout_margin="2dip"
                            android:background="#d3d3d3" />

                        <TextView
                            android:id="@+id/tvDramaDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="April 15, 2017"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDramaTiming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 Am"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDramaLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hindi"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDramaGenera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thriller,Action"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3"
                android:padding="2dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dip"
                android:gravity="fill"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvRatingUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NR"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvUserRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users Rating"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvRatingCritics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NR"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvRatingUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Critics Rating"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#d3d3d3"
                    android:padding="2dip" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvRateDrama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/star_small"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Rate the drama"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:background="@drawable/round_corner"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="left|center"
                android:text="Synopsis"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textsynopsys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="left|center"
                android:text="Stack Overflow is a community of 7.0 million programmers, just like you, helping each other.
Join them; it only takes a minute: Stack Overflow is a community of 7.0 million programmers, just like you, helping each other.
Join them; it only takes a minute: "
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <ExpandableListView
            android:id="@+id/elSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></ExpandableListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:background="@drawable/round_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dip"
                    android:gravity="left|center"
                    android:text="Users Review"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvAllReviewUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dip"
                    android:gravity="right|center"
                    android:text="Show all(121)"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvUsersReview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff" />

            <!-- This LinearLayout if for the dots -->
            <LinearLayout
                android:id="@+id/image_count"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#d3d3d3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"

                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dip"
                    android:gravity="left|center"
                    android:text="Critics Review"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvAllReviewCritics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dip"
                    android:gravity="right|center"
                    android:text="Show all(121)"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCriticsReview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>