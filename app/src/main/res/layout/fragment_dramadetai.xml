<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dramaImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/gujjubhai_ghode_chadhiya" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDramaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="gujjubhai_ghode_chadhiya"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDramaTiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/04/2017 ,10:00 Am" />

                <TextView
                    android:id="@+id/tvDramaLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hindi" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRatingUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NR" />

                <TextView
                    android:id="@+id/tvUserRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Users Rating" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRatingCritics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NR" />

                <TextView
                    android:id="@+id/tvRatingUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Critics Rating" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRateDrama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_mall"
                android:drawableTop="@drawable/star_small"
                android:gravity="center"
                android:padding="6dp"
                android:text="Rate the drama"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis" />

        <ExpandableListView
            android:id="@+id/elSynopsis"
            android:layout_width="match_parent"
            android:layout_height="50dp"></ExpandableListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Users Review"
                android:textColor="@color/black" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvAllReviewUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Show all(121)"
                android:textColor="@color/black" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvUsersReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff" />

        <!-- This LinearLayout if for the dots -->
        <LinearLayout
            android:id="@+id/image_count"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#787878" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Critics Review"
                android:layout_gravity="left"
                android:textColor="@color/black" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tvAllReviewCritics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Show all(121)"
                android:textColor="@color/black" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCriticsReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff" />
    </LinearLayout>
</ScrollView>