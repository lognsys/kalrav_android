<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theatre" />

    <ImageView
        android:id="@+id/kalrav_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/kalrav_logo" />

    <com.hanks.htextview.HTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"

        android:layout_below="@+id/kalrav_logo"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        htext:animateType="typer"
        htext:fontAsset="fonts/Mirza-Regular.ttf" />

    <android.support.design.widget.TextInputLayout

        android:layout_marginTop="10dip"
        android:id="@+id/TextInputUsername"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:textColorHint="@color/white">

    <!--  Title -->
    <EditText
        android:id="@+id/editUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Enter Email id"
        android:backgroundTint="@color/white"
        android:layout_margin="5dip"
         />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextInputName"
        android:layout_below="@+id/TextInputUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:textColorHint="@color/white">

    <EditText
        android:id="@+id/editName"
        android:layout_below="@+id/editUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:hint="Enter Name"
        android:layout_centerInParent="true"
        android:layout_margin="5dip"/>  <!--  Title -->
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextMobileNumber"
        android:layout_below="@+id/TextInputName"
        android:layout_width="match_parent"
        android:layout_margin="5dip"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:textColorHint="@color/white">
    <EditText
        android:id="@+id/editMobileNumber"
        android:layout_below="@+id/editName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="phone"
        android:backgroundTint="@color/white"
        android:hint="Mobile no."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextspninnerGroupName"
        android:layout_below="@+id/TextMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:textColorHint="@color/white">
    <Spinner
        android:id="@+id/spninnerGroupName"
        android:layout_below="@+id/editMobileNumber"
        android:textColor="@color/white"
        android:dropDownSelector="@color/white"
        android:textColorHint="@color/white"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dip"
        android:backgroundTint="@color/white"
        android:spinnerMode="dropdown"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TextautoCities"
        android:layout_below="@+id/TextspninnerGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColorHint="@color/white"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
       >
    <AutoCompleteTextView
        android:id="@+id/autoCities"
        android:layout_below="@+id/spninnerGroupName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Type City Name"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textAutoComplete"
        android:layout_centerInParent="true" />
    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/btnRegister"
        style="?android:textAppearanceMedium"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Register"
        android:layout_margin="5dip"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold" />


</RelativeLayout>

