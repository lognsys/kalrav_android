<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dramaImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/gujjubhai_ghode_chadhiya" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDramaNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Drama Name :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDramaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gujjubhai_ghode_chadhiya"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAuditoriumNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auditorium :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAuditorium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laxmi Plaza Kandivali"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGroupNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Name :"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gujarati Masala"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvticketNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Number:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvticketNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gj123446"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDramaTimingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drama Timing:" />

            <TextView
                android:id="@+id/tvDramaTiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/04/2017 ,10:00 Am" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDramaLanguageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language :" />

            <TextView
                android:id="@+id/tvDramaLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bhojpuri" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
</ScrollView>