<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theatre" />

    <ImageView
        android:id="@+id/kalrav_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/fb_image"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/kalrav_logo" />

    <com.hanks.htextview.HTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        htext:animateType="typer"
        htext:fontAsset="fonts/Mirza-Regular.ttf" />


    <com.facebook.login.widget.LoginButton
        xmlns:fb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fb_image"
        android:layout_width="88dp"
        android:layout_height="90dp"
        fb:login_text=""
        fb:logout_text=""

        android:layout_centerVertical="true"
        android:background="@drawable/fb" />

    <ImageView
        android:id="@+id/google_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/fb_image"
        android:layout_toEndOf="@+id/kalrav_logo"
        android:src="@drawable/google" />
    <Button
        android:id="@+id/btnSkipLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip login"

        android:background="@drawable/round_btn"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/google_image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>




