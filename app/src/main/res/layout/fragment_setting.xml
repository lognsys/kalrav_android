<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.lognsys.toodit.fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_weight="2"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:visibility="visible"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/settings_buttons"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.design.widget.TextInputLayout

                android:layout_marginTop="10dip"
                android:id="@+id/TextInputUsername"
                android:layout_below="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/white">

                <!--  Title -->
                <EditText
                    android:id="@+id/editUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:layout_below="@+id/text"
                    android:textColorHint="@color/white"
                    android:hint="Enter Email id"
                    android:enabled="false"
                    android:textSize="12sp"
                    android:backgroundTint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextInputName"
                android:layout_below="@+id/TextInputUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/white">

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editUsername"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    android:backgroundTint="@color/white"
                    android:hint="Enter Name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />  <!--  Title -->
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextMobileNumber"
                android:layout_below="@+id/TextInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:textColorHint="@color/white">
                <EditText
                    android:id="@+id/editMobileNumber"
                    android:layout_below="@+id/editName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:inputType="phone"
                    android:textSize="12sp"
                    android:backgroundTint="@color/white"
                    android:hint="Mobile no."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextAddress"
                android:layout_below="@+id/TextMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                >
                <EditText
                    android:id="@+id/editAddress"
                    android:layout_below="@+id/editMobileNumber"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter Address"
                    android:textSize="12sp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextCities"
                android:layout_below="@+id/TextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                >
                <EditText
                    android:id="@+id/editCities"
                    android:layout_below="@+id/editAddress"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter City"
                    android:textSize="12sp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextState"
                android:layout_below="@+id/TextCities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                >
                <EditText
                    android:id="@+id/editState"
                    android:layout_below="@+id/editCities"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter State"
                    android:textSize="12sp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextPincode"
                android:layout_below="@+id/TextState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                >
                <EditText
                    android:id="@+id/editPincode"
                    android:layout_below="@+id/editState"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter pin code"
                    android:textSize="12sp"
                    android:text="Save"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </android.support.design.widget.TextInputLayout>
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
