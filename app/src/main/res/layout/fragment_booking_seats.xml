<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/light_white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center|center_horizontal"
            android:textAlignment="center"
            android:autoLink="all"
            android:background="@drawable/round_btn"
            android:text="@string/confirm_seats"
            android:layout_marginTop="20dp"
            android:padding="5dip"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/texttimeDate"
            android:layout_below="@+id/confirm"
            android:layout_margin="5dip"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/middle_row" />
        <TextView
            android:id="@+id/textLastRow"
            android:layout_below="@+id/texttimeDate"
            android:layout_margin="5dip"
            android:gravity="center|left"
            android:layout_marginLeft="5dip"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_row" />
        <TextView
            android:id="@+id/textLastRowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texttimeDate"
            android:layout_margin="5dip"
            android:layout_toRightOf="@+id/textLastRow"
            android:gravity="center|right"
            android:layout_marginRight="5dip"
            android:layout_alignParentRight="true"
            android:text="@string/last_row_price" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleLastRow"
            android:layout_below="@+id/textLastRow"
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>






    </RelativeLayout>
</ScrollView>